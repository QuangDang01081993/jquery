<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Home 3</title>
    <script src ='jquery-3.1.1.min.js'></script>
    <script type="text/javascript">
      $(document).ready(()=>{
        $('#truoc').on('click',function(){

        });
        $(document).on('click','#sau',function(){
          var nextIndex= parseInt($('#girl-id').val());
          $.get(`/api/info/${nextIndex + 1}`, data =>{
            if(data){
              $('.wrapper').html(data);
            }
          });
        });
        $(document).on('click','#like',() => {
          var index = $('#girl-id').val();
          $.get(`/api/like/${index}`,nlike =>{
            $('#like').html(nlike + " like");
          })
        });
      });
    </script>
  </head>
  <body>
    <div class="wrapper">
      <h1><%=girl.name%></h1>
      <div class="app">
        <a href="#" id='truoc'>Truoc</a>
        <a href="#" id='sau'>Sau</a>
        <input type="hidden" id="girl-id" value="<%=girl.id%>">
        <img src="images/<%=girl.image%>" alt="">
        <a href="#" id ='like'><%=girl.nlike%> like</a>
        <a href="#" id='dislike'><%=girl.ndlike%> dislike</a>
      </div>
    </div>
  </body>
</html>
